<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="54dp"
    android:paddingLeft="54dp"
    tools:context="com.delta.catalogo.ProductoFragment"
    android:background="#fff">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/img_prod"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#fff"
        android:scaleType="fitCenter"/>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_prod"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="55dp"
        android:paddingRight="55dp"
        android:orientation="horizontal"
        android:background="#00d">

        <TextView
            android:id="@+id/text_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFF"/>

    </LinearLayout>

    <RelativeLayout
        android:background="#009"
        android:layout_below="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_clave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingLeft="55dp"
        android:paddingTop="10dp"
        android:textColor="#FFF"/>

    <TextView
        android:id="@+id/text_lab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_clave"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textAlignment="center"
        android:paddingLeft="55dp"
        android:paddingTop="10dp"
        android:textColor="#FFF"/>

    <TextView
        android:id="@+id/text_present"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_lab"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textAlignment="center"
        android:paddingLeft="55dp"
        android:paddingTop="10dp"
        android:textColor="#FFF"/>

    <TextView
        android:id="@+id/text_sustancia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_present"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textAlignment="center"
        android:paddingLeft="55dp"
        android:paddingTop="10dp"
        android:textColor="#FFF"/>

    <TextView
        android:id="@+id/text_grupo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_sustancia"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textAlignment="center"
        android:paddingLeft="55dp"
        android:paddingTop="10dp"
        android:textColor="#FF9"/>

    <TextView
        android:id="@+id/text_precio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_grupo"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textAlignment="center"
        android:paddingLeft="55dp"
        android:paddingTop="10dp"
        android:textColor="#ff9"/>
    </RelativeLayout>

</RelativeLayout>
