<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        card_view:cardElevation="9dp"
        card_view:cardCornerRadius="9dp"
        card_view:cardBackgroundColor="#009"
        android:foreground="?selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <ImageView
                android:id="@+id/img_busq"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/nombre_busq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:layout_toRightOf="@+id/img_busq"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:textColor="#fff"/>

            <TextView
                android:id="@+id/clave_busq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Small Text"
                android:layout_toRightOf="@+id/img_busq"
                android:layout_below="@+id/nombre_busq"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:textColor="#fff"/>

            <TextView
                android:id="@+id/lab_busq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Small Text"
                android:layout_toRightOf="@+id/img_busq"
                android:layout_below="@+id/clave_busq"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:textColor="#fff"/>

            <TextView
                android:id="@+id/present_busq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Small Text"
                android:layout_toRightOf="@+id/img_busq"
                android:layout_below="@+id/lab_busq"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:textColor="#fff"/>

            <!--TextView
                android:id="@+id/precio_busq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="$0.00"
                android:layout_toRightOf="@+id/img_busq"
                android:layout_below="@+id/present_busq"
                android:paddingLeft="15dp"
                android:paddingTop="25dp"
                android:textColor="#ff6"/-->

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
